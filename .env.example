# =============================================================================
# 2D1L Environment Variables Configuration
# =============================================================================
# Copy this file to .env and customize values for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Neo4j Graph Database
NEO4J_URI_HOST=neo4j://localhost:7687
NEO4J_URI_DOCKER=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123

# Weaviate Vector Database  
WEAVIATE_HOST_LOCAL=localhost:8080
WEAVIATE_HOST_DOCKER=localhost:8080
WEAVIATE_SCHEME=http
WEAVIATE_SCHEME_DOCKER=http

# Redis Cache
REDIS_HOST_DOCKER=localhost
REDIS_PORT_FOR_APP_IN_DOCKER=6379
REDIS_URL=redis://localhost:6379

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================

# Microservice Ports
USER_SERVICE_PORT=3001
DIALOGUE_SERVICE_PORT=3002

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================

# Google Cloud Services
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-credentials.json
GOOGLE_CLOUD_PROJECT=your-google-cloud-project-id

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Authentication (IMPORTANT: Use a strong secret in production)
JWT_SECRET=your-super-secure-jwt-secret-key-here

# =============================================================================
# DEPLOYMENT ENVIRONMENT
# =============================================================================

NODE_ENV=development

# =============================================================================
# NOTES
# =============================================================================
# - Never commit actual secrets to git
# - Use different values for development/staging/production
# - Rotate secrets regularly in production
# - Some variables have _DOCKER variants for containerized deployments
