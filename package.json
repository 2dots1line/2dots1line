{
  "name": "@2dots1line/v11-monorepo",
  "version": "11.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*",
    "workers/*",
    "py-services/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "preinstall": "npx only-allow pnpm",
    "setup": "pnpm install && pnpm --filter=@2dots1line/database db:generate",
    "clean-install": "rm -rf node_modules pnpm-lock.yaml && find . -name 'node_modules' -type d -prune -exec rm -rf {} + && find . -name 'dist' -type d -prune -exec rm -rf {} + && pnpm install && pnpm --filter=@2dots1line/database db:generate",
    "start:dev": "docker-compose -f docker-compose.dev.yml up -d && pm2 start ecosystem.config.js",
    "start:services": "pm2 start ecosystem.config.js",
    "stop:services": "pm2 delete all",
    "restart:services": "pm2 restart ecosystem.config.js",
    "logs": "pm2 logs",
    "status": "pm2 status",
    "start:db": "docker-compose -f docker-compose.dev.yml up -d",
    "stop:db": "docker-compose -f docker-compose.dev.yml down",
    "full-restart": "pm2 delete all || true && docker-compose -f docker-compose.dev.yml down && docker-compose -f docker-compose.dev.yml up -d && pnpm build && pm2 start ecosystem.config.js"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.4",

    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.4",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@typescript-eslint/typescript-estree": "^8.35.1",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^8.0.3",
    "ioredis": "^5.6.1",
    "jest": "^29.7.0",
    "only-allow": "^1.2.1",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.14.1"
}
