{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "jsx": "react-jsx",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["es2020"],
    "typeRoots": ["../../node_modules/@types", "./node_modules/@types"],
    "types": ["node"],
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    {
      "path": "../../packages/shared-types/tsconfig.build.json"
    },
    {
      "path": "../../packages/core-utils/tsconfig.build.json"
    },
    {
      "path": "../../packages/database/tsconfig.build.json"
    },
    {
      "path": "../../packages/tools/tsconfig.build.json"
    },
    {
      "path": "../../services/config-service/tsconfig.build.json"
    },
    {
      "path": "../../services/dialogue-service/tsconfig.build.json"
    },
    {
       "path": "../../services/pexels-service/tsconfig.build.json"
    },
    {
      "path": "../../services/user-service/tsconfig.build.json"
    },
    {
      "path": "../../services/card-service/tsconfig.build.json"
    }
  ]
}
