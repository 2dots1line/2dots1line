{
  "name": "@2dots1line/ui-components",
  "version": "0.1.0",
  "description": "Shared UI components for 2dots1line applications",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && npm run copy:css",
    "copy:css": "find src -name '*.css' | while read file; do mkdir -p \"dist/$(dirname \"${file#src/}\")\" && cp \"$file\" \"dist/${file#src/}\"; done",
    "dev": "tsc --watch",
    "lint": "eslint src --max-warnings 0",
    "test": "jest"
  },
  "keywords": [
    "ui",
    "components",
    "react",
    "2dots1line"
  ],
  "author": "2dots1line Team",
  "license": "MIT",
  "dependencies": {
    "@2dots1line/shared-types": "workspace:*",
    "@react-three/drei": "^9.117.3",
    "@react-three/fiber": "^8.17.10",
    "clsx": "^2.0.0",
    "lucide-react": "^0.468.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.3.1",
    "three": "^0.171.0"
  },
  "devDependencies": {
    "@storybook/builder-vite": "^9.0.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.2.0",
    "@types/three": "^0.171.0",
    "react": "^18.3.1",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  }
}