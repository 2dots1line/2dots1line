{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "noEmit": false,
    "isolatedModules": false,
    "lib": ["es2020"],
    "paths": {},
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "skipLibCheck": true,
    "typeRoots": ["../../node_modules/@types"],
    "types": []
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules", 
    "dist", 
    "**/*.test.ts", 
    "**/*.spec.ts"
  ]
} 