{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "tsBuildInfoFile": "./dist/tsconfig.build.tsbuildinfo",
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.js",
    "**/*.d.ts",
    "**/*.js.map",
    "**/*.d.ts.map"
  ]
}
