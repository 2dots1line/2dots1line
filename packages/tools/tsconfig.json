{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "composite": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@2dots1line/shared-types": ["../shared-types/dist"],
      "@2dots1line/tool-registry": ["../tool-registry/dist"],
      "@2dots1line/database": ["../database/dist"],
      "@2dots1line/core-utils": ["../core-utils/dist"]
    }
  },
  "include": [
    "index.ts",
    "ai/**/*.ts",
    "data/**/*.ts", 
    "retrieval/**/*.ts",
    "composite/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    { "path": "../shared-types" },
    { "path": "../tool-registry" },
    { "path": "../database" },
    { "path": "../core-utils" }
  ]
} 